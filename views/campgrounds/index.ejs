<% layout('/layouts/boilerplate') %>
    <h1 class="text-center">All Campgrounds</h1>
    <% for(let campground of campgrounds){ %>
        <div class="card mb-3 bg-info-subtle bg-opacity-100">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="<%= campground.images[0].url%>" class="img-fluid rounded-start" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%=campground.description %>
                        </p>
                        <p class="card-text text-secondary">
                            <%=campground.location %>
                        </p>
                        <a href="/campgrounds/<%=campground._id%>" class="btn btn-info">View <%= campground.title %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>